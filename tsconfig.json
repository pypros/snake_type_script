{
    "compilerOptions": {
      "module": "esnext",
      "target": "es2017",
      "outDir": "dist",
      "strict": true,
      "noEmit": false,
      "moduleResolution": "Node",
      "paths": {
        "*": ["./src/*"]
      },
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true
    },
    "include": ["./src/**/*"]
  }
